.row
  .col-xs-12
    form('(ngSubmit)'="onSubmit(f)" '#f'="ngForm")
      .row
        .col-sm-5.form-group
          label(for="name") Name
          input.form-control(
            type="text"
            id="name"
            name="name"
            'ngModel'
            required
          )
        .col-sm-2.form-group
          label(for="amount") Amount
          input.form-control(
            type="number"
            id="amount"
            name="amount"
            'ngModel'
            required
            pattern="^[1-9]+[0-9]*$"
          )
      .row
        .col-xs-12
          button.btn.btn-success(
            type="submit"
            '[disabled]'="!f.valid"
          ) {{ editMode ? 'Update' : 'Add' }}
          button.btn.btn-danger(
            type="button"
            '*ngIf'="editMode"
            '(click)'="onDelete()"
          ) Delete
          button.btn.btn-primary(
            type="button"
            '(click)'="onClear()"
          ) Clear
