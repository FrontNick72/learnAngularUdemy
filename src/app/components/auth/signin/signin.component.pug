.row
  .col-xs-12.col-sm-10.col-md-8.col-sm-offset-1.col-md-offset-2
    form('(ngSubmit)'="onSignin(f)" '#f'="ngForm")
      div.form-group
        label(for='email') Mail
        input#email.form-control(type='email' name='email' 'ngModel')
      div.form-group
        label(for='password') Password
        input#password.form-control(type='password' name='password' 'ngModel')
      button.btn.btn-primary(type='submit') Sign In
      hr
      .label-warning('*ngIf'="error") {{ error }}
